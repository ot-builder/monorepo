{
    "name": "ot-builder-monorepo",
    "private": true,
    "license": "MIT",
    "scripts": {
        "boot": "npm i && npm run update:package.json && npm run lerna:bootstrap && npm run update:tsconfig.json",
        "boot:prod": "npm i && npm run update:package.json && npm run lerna:bootstrap:prod && npm run update:tsconfig.json",
        "clean": "rimraf .cache && lerna run clean && lerna clean --yes",
        "build": "tsc --build packages/tsconfig.json",
        "build:prod": "tsc --build packages/tsconfig.prod.json",
        "rebuild": "npm run clean && npm run boot && npm run build",
        "rebuild:prod": "npm run clean && npm run boot:prod && npm run build:prod",
        "watch": "tsc --build --watch packages/tsconfig.json",
        "update:tsconfig.json": "ts-node scripts/update-package-tsconfig.ts",
        "update:package.json": "ts-node scripts/update-package-json.ts",
        "update:hide-package.json-dev-deps": "ts-node scripts/hide-package-json-dev-deps.ts hide",
        "update:show-package.json-dev-deps": "ts-node scripts/hide-package-json-dev-deps.ts show",
        "create-package": "ts-node scripts/create-package.ts",
        "test": "jest",
        "change": "beachball change",
        "beachball:check": "beachball check",
        "beachball:publish": "beachball publish",
        "docs:dev": "cd doc && next",
        "docs:build": "cd doc && next build",
        "docs:start": "cd doc && next start",
        "docs:deploy": "ts-node scripts/deploy-documents.ts",
        "lerna:bootstrap": "lerna bootstrap --hoist --ignore-scripts",
        "lerna:bootstrap:prod": "npm run update:hide-package.json-dev-deps && lerna bootstrap --hoist --ignore-scripts -- --production && npm run update:show-package.json-dev-deps",
        "lint": "npm run lint:editor-config && npm run lint:eslint",
        "lint:editor-config": "eclint check \"packages/*/src/**/*.ts\"",
        "lint:eslint": "eslint . --ext .ts,.tsx"
    },
    "devDependencies": {
        "@mdx-js/loader": "^1.5.1",
        "@next/mdx": "^9.1.5",
        "@types/fs-extra": "^8.0.1",
        "@types/node": "^12.7.5",
        "@types/react": "^16.9.16",
        "@types/rimraf": "^2.0.3",
        "@typescript-eslint/eslint-plugin": "^2.15.0",
        "@typescript-eslint/parser": "^2.15.0",
        "@zeit/next-stylus": "^1.0.1",
        "beachball": "^1.16.0",
        "eclint": "^2.8.1",
        "eslint": "^6.8.0",
        "eslint-plugin-import": "^2.20.0",
        "eslint-plugin-monorepo-cop": "^1.0.2",
        "fs-extra": "^8.1.0",
        "jest": "^24.8.0",
        "lerna": "^3.16.4",
        "next": "^9.1.5",
        "prettier": "^1.19.1",
        "prettier-eslint": "^9.0.1",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "rimraf": "^2.6.3",
        "stylus": "^0.54.7",
        "ts-node": "^8.3.0",
        "typescript": "^3.7.0"
    }
}
