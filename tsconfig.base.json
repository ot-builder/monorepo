{
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "target": "es2018",
        "sourceMap": true,
        "module": "commonjs",
        "importHelpers": true,
        "lib": ["esnext"],
        "moduleResolution": "node",
        "strict": true,
        "strictBindCallApply": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "experimentalDecorators": true
    }
}
